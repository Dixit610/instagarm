<div class="search-page">
  <% if @posts.exists? %>
    <h1>Top Posts</h1>
  <% else %>
    <h1>Oop! No matching posts ...</h1>
  <% end %>
<div class="user-images">
    <% @posts.each do |post|%>
      <div class="wrapper">
        <%=image_tag post.image %>
      </div>
	  <% post.description.to_s.split(' ').each do |word| %>
		  <% if word.start_with?('#') %>
		    <%= link_to word, search_path(query: word) %>
		  <%else %>
		    <%= word %>
		  <%end %>
		<% end %>
    <% end %>
  </div>
</div>